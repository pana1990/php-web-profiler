{% extends 'base.html.twig' %}

{% block body %}
    {{ include('header.html.twig', with_context = false) }}

    <div class="container mt-2">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Time</th>
                <th>Method</th>
                <th>URI</th>
                <th>Token</th>
            </tr>
            </thead>
            <tbody>
            {% for item in data %}
                <tr>
                    <td class="text-nowrap">{{ item['datetime'] }}</td>
                    <td class="text-nowrap">{{ item['method'] }}</td>
                    <td title="{{ item['uri'] }}">{{ item['uri'] }}</td>
                    <td class="text-nowrap"><a href="debug/{{ item['id'] }}">{{ item['id'] }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

